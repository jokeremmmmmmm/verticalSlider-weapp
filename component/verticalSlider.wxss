.verticalSliderContainer {
  height: 100%;
  position: relative;
}
.progress-current{
  position: absolute;
  bottom: 0;
  width: 100%;
}
.button-slot:empty + .defaultButton {
  border-radius: 50%;
  background-color: white;
  box-shadow: 0px 2px 4px 0px #D0D0D0;
  border: 1px solid #D0D0D0;
  box-sizing: border-box;
}

.button-slot+.defaultButton {
  display: none;
}
.slider-button{
  position: absolute;
  left: 50%;
}